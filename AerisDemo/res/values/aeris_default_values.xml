<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Animation min speed to use in the Map options selector seekbar -->
    <item name="aerismaps_animation_min_speed" format="float" type="dimen">100</item>
    <!-- Animation min speed to use in the Map options selector seekbar -->
    <item name="aerismaps_animation_max_speed" format="float" type="dimen">1000</item>
    <!-- This default speed should be imbetween the max and the min speed. Animation time to wait between frames. -->
    <item name="aerismaps_animation_default_speed" format="float" type="dimen">500</item>
    <!-- The default tile opacity. This Number Should be a float between 0-1 With 0 being invisible and 1 completely visible. -->
    <item name="aerismaps_tile_default_opacity" format="float" type="dimen">.8</item>
    <!-- Time to wait between the end frame of the animation before starting the animiaton over. This is added to normal frame time per animation. -->
    <integer name="aerismaps_animation_end_frame_additional_time">500</integer>
    <!-- Time to wait for camera to settle before performing new point data queries automatically by aeris. -->
    <integer name="aerismaps_camera_change_millis">1500</integer>
    <!-- Total number of animation tiles to load -->
    <integer name="aerismaps_animation_tiles_to_load">10</integer>

    <!-- Storm Cell customization options *************************************** -->
    <!--
     True to display the forecast line for each storm cell on the map. If false, all forecast lines will not be shown
     for all specific markers


    -->
    <bool name="aerismaps_show_forecast_line">true</bool>
    <!--
     True to display the forecast wide cone for each storm cell on the map. If false, all forecast cones will not be shown
     for all specific markers


    -->
    <bool name="aerismaps_show_forecast_cone">true</bool>
    <!-- True to display the storm cell annotation on marker click -->
    <bool name="aerismaps_show_marker_annotation">true</bool>

    <!-- Hail storm cell type -->
    <bool name="aerismaps_hail_show_cone">true</bool>
    <bool name="aerismaps_hail_show_line">true</bool>

    <color name="aerismaps_hail_cone_line_color">#5AFFFF00</color>
    <color name="aerismaps_hail_cone_fill_color">#46FFFF00</color>
    <color name="aerismaps_hail_line_color">#AAFFFF00</color>

    <!-- Rotating storm cell type -->
    <bool name="aerismaps_rotating_show_cone">true</bool>
    <bool name="aerismaps_rotating_show_line">true</bool>

    <color name="aerismaps_rotating_cone_line_color">#5AFF6A00</color>
    <color name="aerismaps_rotating_cone_fill_color">#46FF6A00</color>
    <color name="aerismaps_rotating_line_color">#AAFF6A00</color>

    <!-- Tornadic storm cell type -->
    <bool name="aerismaps_tornadic_show_cone">true</bool>
    <bool name="aerismaps_tornadic_show_line">true</bool>

    <color name="aerismaps_tornadic_cone_line_color">#5AFF0000</color>
    <color name="aerismaps_tornadic_cone_fill_color">#46FF0000</color>
    <color name="aerismaps_tornadic_line_color">#AAFF0000</color>

    <!-- General storm cell type -->
    <bool name="aerismaps_general_show_cone">true</bool>
    <bool name="aerismaps_general_show_line">true</bool>

    <color name="aerismaps_general_cone_line_color">#5A00FF00</color>
    <color name="aerismaps_general_cone_fill_color">#4600FF00</color>
    <color name="aerismaps_general_line_color">#AA00FF00</color>

    <!-- Warnings polygon customization options *********************************** -->
    <!-- Tornado Warning -->

    <color name="aerismaps_warnings_tornado_line_color">#5AFF0000</color>
    <color name="aerismaps_warnings_tornado_fill_color">#46FF0000</color>

    <item name="aerismaps_warnings_tornado_line_width" format="float" type="dimen">4</item>
    <!-- thunderstorm Warning -->

    <color name="aerismaps_warnings_thunderstorm_line_color">#5AFFFF00</color>
    <color name="aerismaps_warnings_thunderstorm_fill_color">#46FFFF00</color>

    <item name="aerismaps_warnings_thunderstorm_line_width" format="float" type="dimen">4</item>

    <!-- flood Warning -->

    <color name="aerismaps_warnings_flood_line_color">#5A00FF00</color>
    <color name="aerismaps_warnings_flood_fill_color">#4600FF00</color>

    <item name="aerismaps_warnings_flood_line_width" format="float" type="dimen">10</item>
    <!-- default map option values for retrieving point data -->
    <bool name="aerismaps_point_options_logcat_enabled">true</bool>
    <!-- Wildfire point data -->
    <integer name="aerismaps_fire_limit_parameter">485</integer>

    <string name="aerismaps_fire_sort_parameter">dt:-1</string>
    <!-- stormreports point data -->
    <integer name="aerismaps_stormreports_limit_parameter">496</integer>

    <string name="aerismaps_stormreports_from_parameter">-24hours</string>
    <string name="aerismaps_stormreports_sort_parameter">dt:-1</string>
    <!-- earthquakes point data -->
    <integer name="aerismaps_earthquakes_limit_parameter">500</integer>

    <string name="aerismaps_earthquakes_sort_parameter">dt:-1</string>
    <string name="aerismaps_earthquakes_from_parameter">-6hours</string>

    <!-- lightning point data -->
    <integer name="aerismaps_lightning_limit_parameter">498</integer>

    <string name="aerismaps_lightning_from_parameter">-6hours</string>
    <string name="aerismaps_lightning_sort_parameter">dt:-1</string>

    <!-- stormcell point data -->
    <integer name="aerismaps_stormcell_limit_parameter">499</integer>

    <string name="aerismaps_stormcell_sort_parameter">tvs:-1,mda:-1,hail:-1,dt:-1</string>
    <!-- default map option values for retrieving polygon data -->
    <!-- warning polygon data -->
    <integer name="aerismaps_warnings_limit_parameter">99</integer>

    <string name="aerismaps_warnings_query_parameter">type:FF.W;type:TO.W;type:SV.W</string>
    <string name="aerismaps_warnings_sort_parameter">dt:-1</string>

</resources>